<section>
  <div class="content-wrapper border-none">
    <h3 class="paper-title border-none">账号管理
      <small>修改密码</small>
    </h3>
  </div>
  <%= custom_form_for @admin, url: update_password_admin_path(@admin), html: { class: 'form-horizontal', method: :post } do |f| %>
    <input type="hidden" name="return_url" value="<%= params[:return_url] %>">
    <div class="panel">
      <div class="panel-body">
        <div class="form-group">
          <label class="col-md-3 control-label">新密码*</label>
          <div class="col-md-7">
            <%= f.input :password, as: :string, required: true %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-3 control-label">确认密码*</label>
          <div class="col-md-7">
            <%= f.input :password_confirmation, as: :string, required: true %>
          </div>
        </div>
      </div>
      <div class="panel-footer text-center">
        <button type="submit" class="mb-sm btn btn-primary">提交</button>
      </div>
    </div>
  <% end %>
</section>


