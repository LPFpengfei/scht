<div class="content-heading">
   <div class="pull-right">
      <div class="btn-group">
         <button type="button" class="btn"><%= link_to '新增用户', new_customer_path %></button>
      </div>
   </div>
   用户列表
</div>
<!-- START widgets box-->
<div class="row">
   <table class="table table-bordered">
      <tr>
         <th>用户id</th>
         <th>用户昵称</th>
         <th>用户电话</th>
         <th>用户密码</th>
         <th>操作</th>
      </tr>
      <% @customer.each do |customer| %>
      <tr>
         <td><%= customer.id %></td>
         <td><%= customer.nickname %></td>
         <td><%= customer.mobile %></td>
         <td><%= customer.password %></td>
         <td><%= link_to '查看', customer_path(customer) %>|<%= link_to '删除' %></td>
      </tr>
      <% end %>
   </table>
</div>