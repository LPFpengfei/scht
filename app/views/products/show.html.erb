<div class="content-heading">
   <div class="pull-right">
      <div class="btn-group">
        <button type="button" class="btn"><%= link_to "修改",edit_product_path(@product) %></button>
        <button type="button" class="btn"><%= link_to "返回",products_path %></button>
      </div>
   </div>
   商品详情
</div>
<!-- START widgets box-->
<div class="row">
  <p><strong>商品名称:</strong>&nbsp&nbsp<%= @product.name %></p>
  <p><strong>商品原价:</strong>&nbsp&nbsp<%= @product.originprice %><strong>元</strong></p>
  <p><strong>商品现价:</strong>&nbsp&nbsp<%= @product.price %><strong>元</strong></p>
  <p><strong>商品图片：</strong>
  <% @product.product_images.each do |image| %>
    <%=  image_tag image.file, width: '100px' %>
  <%end%>
  </p>
  <p><strong>库存:</strong>&nbsp&nbsp<%= @product.quantity %></p>  
  <p><strong>产品详情:</strong>&nbsp&nbsp<%= @product.description %></p>
  <p><strong>商品分类:</strong>&nbsp&nbsp<%= @product.try(:product_category).try(:name) %></p>
</div>