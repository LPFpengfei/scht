<div class="content-heading">
   <div class="pull-right">
      <div class="btn-group">
        <button type="button" class="btn"><%= link_to "修改",edit_product_path(@product) %></button>
        <button type="button" class="btn"><%= link_to "返回",products_path %></button>
      </div>
   </div>
   商品详情
</div>
<!-- START widgets box-->
<div class="row">
  <p class="bg-primary"><strong>商品名称:</strong>&nbsp&nbsp<%= @product.name %></p>
  <p class="bg-success"><strong>商品原价:</strong>&nbsp&nbsp<%= @product.originprice %><strong>元</strong></p>
  <p class="bg-info">商品图片：<img src="/assets/angle/user/02.jpg" class="img-rounded"></p>  
  <p class="bg-warning"><strong>商品现价:</strong>&nbsp&nbsp<%= @product.price %><strong>元</strong></p>
  <p class="bg-danger"><strong>产品详情:</strong>&nbsp&nbsp<%= @product.description %></p>
  <p class="bg-primary"><strong>库存:</strong>&nbsp&nbsp<%= @product.quantity %></p>
  <p class="bg-success"><strong>商品分类:</strong>&nbsp&nbsp<%= @product.try(:product_category).try(:name) %></p>
</div>