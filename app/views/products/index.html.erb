<div class="content-heading">
   <div class="pull-right">
      <div class="btn-group">
         <button type="button" class="btn"><%= link_to '新增商品', new_product_path %></button>
      </div>
   </div>
   商品列表
</div>
<div class="row">
   <table class="table table-bordered">
      <tr>
         <th>商品id</th>
         <th>商品名称</th>
         <th>原价</th>
         <th>现价</th>
         <th>产品详情</th>
         <th>库存</th>
         <th>商品分类</th>
         <th>操作</th>
      </tr>
   <% @product.each do |product| %>
      <tr>
         <td><%= product.id %></td>
         <td><%= product.name %></td>
         <td><%= product.originprice %></td>
         <td><%= product.price %></td>
         <td><%= product.description %></td>
         <td><%= product.quantity %></td>
         <td><%= product.try(:product_category).try(:name) %></td>
         <td><%= link_to '查看', product_path(product) %>|<%= link_to '删除', product_path(product), method: :delete %></td>
      </tr>
   <% end %>
   </table>
</div>